{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": { "noArrayIndexKey": "off", "noAssignInExpressions": "off" },
      "a11y": { "useKeyWithClickEvents": "off", "useValidAriaRole": "off" },
      "complexity": { "noStaticOnlyClass": "off" },
      "nursery": { "useImportRestrictions": "warn" },
      "correctness": { "noUnusedVariables": "warn", "noUnusedLabels": "warn", "useExhaustiveDependencies": "off" }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 135,
    "lineEnding": "lf",
    "ignore": []
  }
}
